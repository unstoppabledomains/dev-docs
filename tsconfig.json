{
  "include": [
    "./.*/**/*.ts",
    "./.*/**/*.js",
    "./.*/**/*.ejs",
    "./.*/**/*.tsx",
    "./.*/**/*.jsx",
    "./.*/**/*.mdx",
    "./.*/**/*.json",
    "./**/*.ts",
    "./**/*.js",
    "./**/*.ejs",
    "./**/*.tsx",
    "./**/*.jsx",
    "./**/*.mdx",
    "./**/*.json"
  ],
  "exclude": ["./static"],
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "types": [
      "node",
      "ejs"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
